{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "exclude": ["node_modules"]
}
